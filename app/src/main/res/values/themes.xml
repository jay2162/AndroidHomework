<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="background">@color/white</item>
        <!--ActionBar style-->
        <item name="android:actionBarStyle">@style/styleActionBar</item>
        <item name="actionBarStyle">@style/styleActionBar</item>
        <item name="android:windowIsTranslucent">true</item>

        <!--For cut copy bar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>


        <item name="android:textViewStyle">@style/styleTextView</item>
        <item name="android:editTextStyle">@style/styleEditText</item>
        <item name="editTextStyle">@style/styleEditText</item>
        <item name="android:buttonStyle">@style/styleButton</item>
        <item name="buttonStyle">@style/styleButton</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>

    </style>


    <style name="TransparentProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <!-- ActionBar Style -->
    <style name="styleActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="icon">@drawable/ic_back</item>
        <item name="android:icon">@drawable/ic_back</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:displayOptions">homeAsUp|showHome</item>
        <item name="displayOptions">homeAsUp|showHome</item>
    </style>

    <!--    TextView style-->
    <style name="styleTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <!-- Progressbar theme -->
    <style name="AppTheme.ProgressBarDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
    </style>

    <style name="LightDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
    </style>

    <!-- EditText style -->
    <style name="styleEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/theme_edt</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:paddingStart">@dimen/margin_20</item>
        <item name="android:paddingEnd">@dimen/margin_20</item>
        <item name="android:minHeight">@dimen/et_height</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:inputType">textNoSuggestions|textFilter</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <!-- Button style -->
    <style name="styleButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/theme_btn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:paddingTop">@dimen/margin_4</item>
        <item name="android:paddingBottom">@dimen/margin_4</item>
        <item name="android:paddingLeft">@dimen/margin_8</item>
        <item name="android:paddingRight">@dimen/margin_8</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Alert dialog theme -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BottomSheetDialog_Rounded" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet_Rounded</item>
    </style>

    <style name="BottomSheet_Rounded" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/theme_bg</item>
    </style>

    <style name="titleTextViewStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="medium_16_textStyle" parent="titleTextViewStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>